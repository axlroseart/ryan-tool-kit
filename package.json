{
  "private": true,
  "name": "dcc-tool-kit",
  "version": "0.0.1",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "start": "dumi dev",
    "build-doc": "dumi build",
    "compile": "father-build",
    "lint": "prettier packages/**/*.{ts,tsx} --check && stylelint packages/**/*.less",
    "format": "prettier packages/**/*.{ts,tsx} --write && stylelint packages/**/*.less --fix",
    "ci": "npm run init && npm run lint && npm run compile",
    "test": "umi-test --coverage",
    "bootstrap": "lerna bootstrap",
    "version": "lerna version",
    "pub": "lerna publish from-git --canary --yes --force-publish=*",
    "svgo": "svgo -f ./packages/antd-mobile-icons/icons -o ./packages/antd-mobile-icons/icons/out --config=./.svgo.yml"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@tools-list/eslint-config-self": "0.0.3",
    "@tools-list/stylelint-config-self": "0.0.2",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@umijs/test": "^3.0.5",
    "dumi": "^1.0.16",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.1",
    "yorkie": "^2.0.0"
  }
}
