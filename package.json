{
  "private": true,
  "name": "ryan-drx-tool-kit",
  "version": "0.0.1",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "start": "dumi dev",
    "build-doc": "dumi build",
    "compile": "father-build",
    "production": "node ./bin/server.js",
    "lint": "eslint packages/**/*.{ts,tsx} --fix && stylelint packages/**/*.less --fix",
    "test": "umi-test --coverage",
    "test_hooks": "umi-test ./packages/hooks --coverage",
    "test_utils": "umi-test ./packages/utils --coverage",
    "test_components": "umi-test ./packages/components --coverage",
    "bootstrap": "lerna bootstrap --hoist",
    "pub": "lerna publish from-package --yes"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -eGIT_classnamesPARAMS $"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint  --fix"
    ],
    "*.{css,less}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "autoprefixer": "^9.8.8",
    "postcss": "^7.0.39",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^2.0.1",
    "@tools-list/eslint-config-self": "0.0.3",
    "@tools-list/stylelint-config-self": "0.0.2",
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^24.0.15",
    "@types/ramda": "0.27.32",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@umijs/test": "^3.0.5",
    "dumi": "^1.0.16",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "express": "^4.17.1",
    "father-build": "^1.17.2",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.7",
    "mutationobserver-shim": "^0.3.5",
    "postcss-import": "^12.0.1",
    "react-test-renderer": "^16.13.1",
    "stylelint": "^9.2.1",
    "umi-test": "^1.9.0",
    "yorkie": "^2.0.0"
  }
}
