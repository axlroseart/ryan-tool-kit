{
  "private": true,
  "name": "dcc-tool-kit",
  "version": "0.0.1",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "start": "dumi dev",
    "build-doc": "dumi build",
    "compile": "father-build",
    "lint": "eslint packages/**/*.{ts,tsx} --fix && stylelint packages/**/*.less --fix",
    "ci": "npm run init && npm run lint && npm run compile",
    "test": "umi-test --coverage",
    "bootstrap": "lerna bootstrap",
    "pub": "lerna publish from-package --yes"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,less,md,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,less}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@tools-list/eslint-config-self": "0.0.3",
    "@tools-list/stylelint-config-self": "0.0.2",
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@umijs/test": "^3.0.5",
    "dumi": "^1.0.16",
    "father-build": "^1.17.2",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.7",
    "stylelint": "^8.0.0",
    "yorkie": "^2.0.0"
  },
  "__npminstall_done": false
}
